    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'stonemq'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=stonemq"
                ],
                "filter": {
                    "name": "stonemq",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'stonemq'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=stonemq",
                    "--package=stonemq"
                ],
                "filter": {
                    "name": "stonemq",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "postRunCommands": [
                "process handle SIGINT -p true -s false -n true",
                "process handle SIGTERM -p true -s false -n true",
                "process handle SIGQUIT -p true -s false -n true"
            ],
            // "console": "externalTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug log-parser",
            "cargo": {
                "args": [
                    "build",
                    "--bin=log-parser",
                    "--package=stonemq"
                ],
                "filter": {
                    "name": "log-parser",
                    "kind": "bin"
                }
            },
            "args": [
                "queue",
                "--file=test_data/queue/topic_a-0/0.log"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'stonemq'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=stonemq",
                    "--package=stonemq"
                ],
                "filter": {
                    "name": "stonemq",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'config'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=config",
                    "--package=stonemq"
                ],
                "filter": {
                    "name": "config",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}